<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE module PUBLIC
    "-//Puppy Crawl//DTD Check Configuration 1.3//EN"
    "http://www.puppycrawl.com/dtds/configuration_1_3.dtd">

<module name="Checker">
    <module name="SuppressionFilter">
        <property name="file" value="config/suppressions.xml"/>
    </module>
    <!--  源文件编码格式为UTF-8  -->
    <property name="charset" value="UTF-8" />
    <!--  默认告警级别error  -->
    <property name="severity" value="error" />
    <!--   =====================================  -->
    <!--        重复代码的检查,超过8行就认为重复         -->
    <!--   =====================================  -->
    <module name="StrictDuplicateCode">
        <property name="min" value="10" />
    </module>
    <!--   =====================================  -->
    <!--        size度量                          -->
    <!--   =====================================  -->
    <!--  文件长度不超过500行  -->
    <module name="FileLength">
        <property name="max" value="500" />
    </module>
    <!--  检查文件是否已换行结束   -->
    <!--
     See http://checkstyle.sf.net/config_misc.html#NewlineAtEndOfFile
    -->
    <!-- <module name="NewlineAtEndOfFile" /> -->
    <!--  检查属性文件是否包含相同的key          -->
    <!--
     See http://checkstyle.sf.net/config_misc.html#Translation
    -->
    <module name="Translation">
        <property name="severity" value="warning" />
    </module>
    <module name="TreeWalker">
        <property name="tabWidth" value="4" />
        <!--   =====================================  -->
        <!--        命名检查 （Sun官方定的规则）         -->
        <!--   =====================================  -->
        <!-- 检查类和接口的名称，默认规则是^[A-Z][a-zA-Z0-9]*$ -->
        <!--  See http://checkstyle.sf.net/config_naming.html  -->
        <module name="TypeName" />
        <!-- 包名的命名规范 -->
        <module name="PackageName">
            <property name="format" value="^[a-z]+(\.[a-zA-Z_][a-zA-Z]*)*$" />
        </module>
        <!-- 方法名的命名规范，默认规则是：^[a-z][a-zA-Z0-9]*$ -->
        <module name="MethodName" />
        <!--  常量名的检查 默认规则是：^[A-Z][A-Z0-9]*(_[A-Z0-9]+)*$ -->
        <module name="ConstantName" />
        <!--  局部的final变量，包括catch中的参数的检查  -->
        <module name="LocalFinalVariableName" />
        <!--  局部的非final型的变量，包括catch中的参数的检查  -->
        <module name="LocalVariableName" />
        <!--  仅仅是static型的变量（不包括static final型）的检查  -->
        <module name="StaticVariableName" />
        <!--  非static型变量的检查  -->
        <module name="MemberName" />
        <!--  方法的参数名  -->
        <module name="ParameterName " />
        <!--   =====================================  -->
        <!--            文件结构检查                  -->
        <!--   =====================================  -->
        <!--  import中避免星号"*"  -->
        <!--  See http://checkstyle.sf.net/config_import.html  -->
        <module name="AvoidStarImport" />
        <!--  没用的import检查  -->
        <module name="UnusedImports" />
        <!--  非法引用，defaults to sun.* packages  -->
        <module name="IllegalImport" />
        <!--  重复引用  -->
        <module name="RedundantImport" />
        <!--
         import导入顺序检查
                <module name="ImportOrder">
                    <property name="severity" value="warning"/>
                    <property name="groups" value="com.dianping.beauty,android,junit,net,org,java,javax"/>
                    <property name="option" value="top"/>
                    <property name="tokens" value="STATIC_IMPORT, IMPORT"/>
                </module>
        -->
        <!--  指定头文件  -->
        <!--
        <module name="Header">
                    <property name="headerFile"
                              value="${checkstyle.header.file}" />
                    <property name="ignoreLines" value="2" />
                </module>
        -->
        <!-- 修饰符顺序 -->
        <!--  See http://checkstyle.sf.net/config_modifiers.html  -->
        <module name="ModifierOrder" />
        <!--   =====================================  -->
        <!--        size度量                          -->
        <!--   =====================================  -->
        <!--  See http://checkstyle.sf.net/config_sizes.html  -->
        <!--  每行不超过50个字 -->
        <module name="LineLength">
            <property name="max" value="120" />
            <property name="ignorePattern"
                value="^package.*|^import.*|a href|href|http://|https://|ftp://" />
        </module>
        <!--  方法和构造函数，最大150行 -->
        <module name="MethodLength" />
        <!-- 检查方法和构造函数的参数个数。默认为 7 -->
        <module name="ParameterNumber" />
        <!--  return 方法不超过3个 -->
        <module name="ReturnCount">
            <property name="max" value="3" />
        </module>
        <!--  布尔表达式的复杂度，默认值为3，不超过7  -->
        <module name="BooleanExpressionComplexity">
            <property name="max" value="7" />
        </module>
        <!--  if 最大嵌套深度  -->
        <module name="NestedIfDepth">
            <property name="max" value="3" />
        </module>
        <!--  函数的分支复杂度  -->
        <module name="CyclomaticComplexity">
            <property name="max" value="7" />
        </module>
        <!--  try 语句深度 -->
        <module name="NestedTryDepth">
            <property name="max" value="3" />
        </module>
        <!--   =====================================  -->
        <!--            异常处理                        -->
        <!--   =====================================  -->
        <module name="RedundantThrows" />
        <module name="IllegalCatch" />
        <module name="IllegalThrows" />
        <!--   =====================================  -->
        <!--            编码问题                        -->
        <!--   =====================================  -->
        <!--  See http://checkstyle.sf.net/config_coding.html  -->
        <!--  避免内联表达式 -->
        <module name="AvoidInlineConditionals" />
        <!--  双检锁，暂不支持 <module name="DoubleCheckedLocking" /> -->
        <module name="EmptyStatement" />
        <module name="EqualsHashCode" />
        <module name="HiddenField">
            <property name="ignoreConstructorParameter" value="true" />
            <property name="ignoreSetter" value="true" />
            <property name="ignoreAbstractMethods" value="true" />
        </module>
        <module name="IllegalInstantiation" />
        <module name="InnerAssignment" />
        <module name="MagicNumber" />
        <module name="MissingSwitchDefault" />
        <!-- <module name="SimplifyBooleanExpression" /> -->
        <module name="SimplifyBooleanReturn" />
        <!--

                <module name="ParameterAssignment" />
                    <module name="RequireThis">
                    <property name="checkMethods" value="false" />
                    </module>

        -->
        <!--  不必要的圆括号 -->
        <module name="UnnecessaryParentheses" />
        <!--  多次出现的字符串 -->
        <module name="MultipleStringLiterals">
            <property name="allowedDuplicates" value="3" />
        </module>
        <module name="NoFinalizer">
            <property name="severity" value="error" />
        </module>
        <!--   =====================================  -->
        <!--          类设计规范，暂不考虑                -->
        <!--   =====================================  -->
        <!--  See http://checkstyle.sf.net/config_design.html  -->
        <!--
        module name="FinalClass" />
                <module name="HideUtilityClassConstructor" />
                <module name="InterfaceIsType" />
                <module name="VisibilityModifier">
                    <property name="packageAllowed" value="true"/>
                </module>
        -->
        <!--   =====================================  -->
        <!--            杂项                          -->
        <!--   =====================================  -->
        <!--  See http://checkstyle.sf.net/config_misc.html  -->
        <!--  避免使用Finalizers  -->
        <module name="TodoComment">
            <property name="format" value="(TODO)|(FIXME)" />
        </module>
        <!--  String的比较不能用!= 和 ==  -->
        <module name="StringLiteralEquality">
            <property name="severity" value="error" />
        </module>
        <!--  同一行不能有多个声明  -->
        <module name="MultipleVariableDeclarations" />
        <!--  不许出现空语句  -->
        <module name="EmptyStatement" />
        <module name="UncommentedMain">
            <property name="severity" value="error" />
            <property name="excludedClasses" value="^.*Launcher$,^.*Test$,^.*Utils$" />
        </module>
        <module name="RegexpSinglelineJava">
            <property name="format" value="printStackTrace()" />
            <property name="ignoreComments" value="true" />
            <property name="severity" value="error" />
            <property name="message" value="have processed the exception?" />
        </module>
    </module>
    <module name="RegexpSingleline">
        <property name="format" value="System\.(out)|(err)\.print(ln)?\(" />
        <property name="severity" value="error" />
        <property name="message" value="Line has testing print stmt." />
    </module>
</module>